<div id="map-section" class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hidden mb-8 relative">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-sm font-bold text-slate-400 uppercase tracking-widest mb-4 flex items-center gap-2">
      <span class="w-3 h-3 bg-green-500 rounded-full"></span> Distribución Turistica Geográfica
    </h2>
    <button id="reset-map" class="text-xs font-bold text-blue-600 hover:underline">Reiniciar Vista</button>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div id="map-container" class="lg:col-span-2 bg-slate-50 rounded-xl relative overflow-hidden h-100">
      <div id="map-tooltip" class="absolute hidden bg-slate-900 text-white px-3 py-1.5 rounded-lg text-xs font-bold pointer-events-none z-50 shadow-xl border border-white/20">
      </div>
    </div>

    <div class="bg-slate-50 p-6 rounded-xl border border-slate-100 h-fit">
      <span class="text-bold text-slate-500">Seleccione un Departamento</span>
      <h3 id="depto-name" class="text-lg font-bold text-slate-900 mb-4">Selecciona Un Departamento</h3>
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <span class="text-slate-500 text-sm">Huéspedes:</span>
          <span id="depto-hoteles" class="font-bold text-blue-600 text-xl">0</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-500 text-sm">Visitantes:</span>
          <span id="depto-museos" class="font-bold text-orange-600 text-xl">0</span>
        </div>
      </div>
    </div>
  </div>
</div>